<div class="container-home">
    <div class="container-rtp">
        <a href="http://localhost:4000/realtimeproducts">Administrar productos</a>
    </div>
    <div class="container-view-products">
        <h2 class="title-view-products">Vista de productos</h2>
        {{#if products.length}}
            <table class="table-view-products">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td><img src="{{this.thumbnail}}" alt="{{this.title}}" class="img-table"></td>
                    </tr>
                {{/each}}
            </tbody>
            </table>
        {{else}}
        <p>No hay productos disponibles.</p>
        {{/if}}
    </div>
</div>
</div>
